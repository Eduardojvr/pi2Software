<Gerenciador>:      
    ScreenManager:
		TelaInicial:
		TelaAfinacao: 
           
<TelaInicial>:
    name: 'telaInicial'
    BoxLayout:
        orientation: 'horizontal'
        Menu:
			
		# Substituir pela funcao de opcoes principais (Afinar, afrouxar...)	
        Button:
            text: 'Proxima Tela'
            on_release: root.parent.current = 'telaAfinacao'

<TelaAfinacao>:
	name: 'telaAfinacao'
	BoxLayout:
		orientation: 'vertical'
		columns: 3
		
		Button:
			text: "Voltar"
			background_color: (0,0,0,0)
			#on_release: root.parent.current = 'telaInicial'
			on_release: root.confirm_return()
			size_hint: (0.5,0.5)
			pos: (0,root.y)
			Image:
				size_hint: (0.4,0.4)
				center_x: self.parent.center_x -100
        		center_y: self.parent.center_y
				source:"../img/voltar.png"
		Label:
			text: 'Barra de progresso'
		# Substituir pela funcao de notas e frequencia	
		
		ToneLayout:	
    
		# Substituir pela funcao de db	
		Label:
			text: 'Barra de DB'
		
<Menu>:
	name: 'menu'
	size_hint_x: 0.2
	Label:
		text:'O menu lateral \n vai aqui'
			
			
