<Gerenciador>:
    name: 'ScreenManager'
    BoxLayout:
        orientation: 'horizontal'
        columns: 1       
        ScreenManager:
			TelaInicial:
			TelaAfinacao: 
           
<TelaInicial>:
    name: 'telaInicial'
    BoxLayout:
        orientation: 'horizontal'
        Menu:
			
		# Substituir pela funcao de opcoes principais (Afinar, afrouxar...)	
        Button:
            text: 'Proxima Tela'
            on_release: root.parent.current = 'telaAfinacao'

<TelaAfinacao>:
	name: 'telaAfinacao'
	BoxLayout:
		orientation: 'vertical'
		columns: 4
		BoxLayout:
			orientation: 'horizontal'
			
			Button:
				text: 'Voltar'
				on_release: root.parent.current = 'telaInicial'
				size_hint: .2, 1

			ProgressBar:
				id: progress_bar
				size_hint: .6, 1
				value: 0
				on_value: root.show_progress_bar(*args)

			Label:
				id: progress
				size_hint: .2, 1
				
		# Substituir pela funcao de notas e frequencia	
		Label:
			text: 'Notas e frequencia'

		
		Label:
			id: decibeis
			text: '0'
		Slider:
			id: barra_db
			cursor_image: 'assets/cursor_verde.png'
			cursor_size: (100, 40)
			background_horizontal: 'assets/bg.png'
			value: root.mock_db_value()
			range: (-50, 50)
			step: 1
			on_value: root.show_db(*args)
			on_value: root.change_db_cursor(*args)
			
			on_touch_down: root.disable_touch_event()
			on_touch_move: root.disable_touch_event()
			on_touch_up: root.disable_touch_event()

<Menu>:
	name: 'menu'
	size_hint_x: 0.2
	Label:
		text:'O menu lateral \n vai aqui'
			
			
